{
    "name": "@bed-and-breakfast/templates-open-source",
    "version": "0.0.0",
    "description": "Bed & Breakfast Base Template [REPLACE ME]",
    "private": false,
    "repository": {
        "type": "git",
        "url": "https://github.com/bed-and-breakfast/templates-open-source.git"
    },
    "bugs": "https://github.com/bed-and-breakfast/templates-open-source/issues",
    "homepage": "https://github.com/bed-and-breakfast/templates-open-source",
    "author": "Bed & Breakfast",
    "keywords": [],
    "type": "commonjs",
    "main": "dist/index.js",
    "files": [
        "dist"
    ],
    "publishConfig": {
        "access": "public"
    },
    "scripts": {
        "build": "rimraf dist && tsc",
        "format": "prettier \"**/*.+(js|ts|json)\"",
        "format:package": "format-package -w",
        "lint": "eslint . --ext .ts,.js",
        "prepare": "husky install",
        "test": "jest",
        "test:coverage": "jest --coverage",
        "test:watch": "jest --watch"
    },
    "lint-staged": {
        "**/*": "prettier --write --ignore-unknown",
        "*.{ts,js}": "eslint --cache --fix",
        "*.+(js|ts|json)": "prettier --write"
    },
    "jest": {
        "moduleFileExtensions": [
            "js",
            "json",
            "ts"
        ],
        "rootDir": "src",
        "testRegex": ".*\\.spec\\.ts$",
        "testEnvironment": "node",
        "transform": {
            "^.+\\.(t|j)s$": "ts-jest"
        },
        "reporters": [
            "default",
            [
                "jest-junit",
                {
                    "suiteName": "Test Report",
                    "outputDirectory": "./test"
                }
            ]
        ],
        "collectCoverageFrom": [
            "**/*.(t|j)s"
        ],
        "coverageDirectory": "../coverage",
        "coverageReporters": [
            "html",
            "text",
            "cobertura"
        ]
    },
    "types": "dist/index.d.ts",
    "devDependencies": {
        "@types/jest": "^29.5.1",
        "@types/node": "^20.2.5",
        "@typescript-eslint/eslint-plugin": "^5.59.8",
        "@typescript-eslint/parser": "^5.59.8",
        "eslint": "^8.42.0",
        "eslint-config-airbnb-typescript": "^17.0.0",
        "eslint-config-prettier": "^8.8.0",
        "format-package": "^7.0.0",
        "husky": "^8.0.3",
        "jest": "^29.5.0",
        "jest-junit": "^16.0.0",
        "lint-staged": "^13.2.2",
        "prettier": "2.8.8",
        "rimraf": "^5.0.1",
        "ts-jest": "^29.1.0",
        "typescript": "^5.0.4"
    }
}
